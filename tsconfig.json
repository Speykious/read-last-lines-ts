{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"outDir": "lib",
		"rootDir": "src",

		// "inlineSourceMap": true,
		"sourceMap": true,
		"declaration": true,
		"allowJs": true,

		"types": ["node"],
		"typeRoots": ["node_modules/@types", "true"]
	},
	"ts-node": {
		"transpileOnly": true
	},
	"exclude": ["node_modules/*"],
	"include": ["src/**/*.ts"]
}
